# Zero-Cost Configuration
# No API keys required - all enrichment via direct scraping only

# DISABLE ALL BROKEN/PAID ENRICHMENT LAYERS
ENABLE_LAYER_1_MAPS=true           # ✅ Google Maps (works free)
ENABLE_LAYER_2_REPUTATION=true      # ✅ Basic dorking (works free)
ENABLE_LAYER_3_FUNDING=false        # ❌ Needs Crunchbase API
ENABLE_LAYER_4_TECH_STACK=false     # ❌ BuiltWith quota exceeded
ENABLE_LAYER_5_HIRING=false         # ❌ LinkedIn heavily blocked
ENABLE_LAYER_6_PATENTS=false        # ❌ USPTO API 403 errors
ENABLE_LAYER_7_SOCIAL=true          # ✅ Public profiles (works free)
ENABLE_LAYER_8_TRADE=false          # ❌ Census API needs paid tier
ENABLE_LAYER_9_EVENTS=false         # ❌ 0% success rate
ENABLE_LAYER_10_NEWS=true           # ✅ Google News (works free)
ENABLE_LAYER_11_GOV=false           # ❌ SAM.gov broken
ENABLE_LAYER_12_FIRMOGRAPHICS=false # ❌ Needs ZoomInfo/D&B
ENABLE_LAYER_13_ACADEMIC=false      # ❌ ArXiv returns noise

# STEALTH SETTINGS (Ultra-conservative for free tier)
SEARCH_DELAY_MIN=10  # 10 seconds minimum delay between searches
SEARCH_DELAY_MAX=20  # 20 seconds maximum delay
MAX_SEARCHES_PER_MINUTE=3  # Only 3 searches per minute
PREFER_DUCKDUCKGO=true  # DDG less aggressive than Google

# QUALITY THRESHOLDS
MIN_LEAD_QUALITY_SCORE=20  # Lower threshold for free tier
REQUIRE_CONTACT_INFO=false  # Don't require email/phone (hard to get free)

# OFFLINE MODE (No AI validation)
AI_VALIDATION_ENABLED=false  # No Gemini/Groq calls
USE_HEURISTIC_VALIDATION=true  # Regex-based validation only

# FREE TIER LIMITS (Prevent quota exhaustion)
MAX_LEADS_PER_JOB=50  # Prevent timeout on GitHub Actions
MAX_ENRICHMENT_TIME_SECONDS=180  # 3 minutes max per lead
SKIP_ENRICHMENT_IF_NO_WEBSITE=true  # Can't extract contacts without website
