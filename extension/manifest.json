{
    "manifest_version": 3,
    "name": "Clarity Pearl: Sovereign Extension",
    "version": "1.0.0",
    "description": "One-click Lead Capture & Sales Intelligence directly from your browser.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "*://*.linkedin.com/*",
        "*://*.google.com/*",
        "*://claritypearl.app/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/in/*",
                "*://*.linkedin.com/company/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "128": "icons/icon128.png"
    }
}